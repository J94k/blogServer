{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./build",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  }
}
